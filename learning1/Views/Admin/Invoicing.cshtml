@{
    Layout = "_AdminLayout";
}



<div class="container pb-4">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h4 class="">Timesheets</h4>
        <div class="d-flex justify-content-end m-4">
            <a href="javascript: history.go(-1)"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>


    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-0">
            <form class="form-floating" method="post">
                <div class="d-flex align-items-center mt-4 gap-md-4 gap-2 p-4">
                    <div class="form-floating input-info col-md-4 col-sm-6 mb-4">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected value=""></option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="floatingSelect" class="text-secondary">Search by Timesheetperiod</label>
                    </div>
                    <div class="form-floating input-info col-md-4 col-sm-6 mb-4">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected value=""></option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <label for="floatingSelect" class="text-secondary">Search by Timesheetperiod</label>
                    </div>
                </div>

                <span class="p-4">No Record(s) Found</span>



                <div class="">
                    <h4 class="p-4">Pending Bi-Weekly Timesheets</h4>
                    <table class="table-responsive  table-hover w-100">
                        <tr class="border-bottom border-secondary-subtle bg-secondary-subtle">
                            <td scope="col" class="py-3 ps-4">Start Date</td>
                            <td scope="col" class="py-3 ps-4">End Date</td>
                            <td scope="col" class="py-3">Status</td>
                            <td scope="col" class="py-3">Actions</td>
                        </tr>


                            <tr class="border-bottom border-secondary-subtle">
                                <td class="ps-4 py-1"></td>
                                <td class="py-1"></td>
                                <td class="py-1"></td>
                                <td class="py-1">
                                    <a class="btn btn-outline-info text-info bg-white dark-mode1" asp-action="BiweeklyTimeSheet" asp-controller="Admin">Approve</a>
                                </td>
                            </tr>
           
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>
