@{
}


@{
    Layout = "_AdminLayout";
}




@* Content of the Web-page *@
<div class="container-fluid p-4">
    <div class="d-flex justify-content-between my-4">
        <h4 class="">Email Logs (Gmail)</h4>
        <div class="d-flex justify-content-end">
            <a asp-controller="Admin" asp-action="admindashboard"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>


    <div class="container-fluid bg-white border-0 shadow-sm py-3">
        <div class="row mb-2">
            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="form-floating select-info">
                    <select class="form-select form-control shadow-none" aria-label="Floating label select example">
                        <option value="0">All</option>
                        <option value="1">Admin</option>
                        <option value="2">Physician</option>
                        <option value="3">Patient</option>
                    </select>
                    <label for="floatingSelect">Search by Role</label>
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="form-floating input-info">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Reciever Name">
                    <label for="floatingInput">Reciever Name</label>
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="form-floating input-info">
                    <input type="email" class="form-control" id="floatingInput" placeholder="Email">
                    <label for="floatingInput">Email id</label>
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="form-floating input-info">
                    <input type="date" class="form-control" id="floatingInput" placeholder="Created Date">
                    <label for="floatingInput">Created Date</label>
                </div>
            </div>
            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="form-floating input-info">
                    <input type="date" class="form-control" id="floatingInput" placeholder="Sent Date">
                    <label for="floatingInput">Sent Date</label>
                </div>
            </div>

            <div class="col-lg-2 col-sm-4 mb-2">
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-outline-info bg-white text-info">Clear</button>
                    <button type="submit" class="btn btn-info text-white">Search</button>
                </div>
            </div>



        </div>





        <div class="container-fluid p-0">
            <table class="table-responsive table-hover w-100">
                <tr class="border-bottom border-secondary-subtle bg-secondary-subtle">
                    <td scope="col" class="py-3 ps-4">Recipient</td>
                    <td scope="col" class="py-3">Action</td>
                    <td scope="col" class="py-3">Role Name</td>
                    <td scope="col" class="py-3">Email id</td>
                    <td scope="col" class="py-3">Create Date</td>
                    <td scope="col" class="py-3">Sent Date</td>
                    <td scope="col" class="py-3">Sent</td>
                    <td scope="col" class="py-3">Sent Tries</td>
                    <td scope="col" class="py-3">Confirmation Number</td>
                </tr>



                <tr class="border-bottom border-secondary-subtle">
                    <td class="ps-4 py-1">Admin</td>
                    <td class="py-1">Request Monthly Data</td>
                    <td class="py-1">Physician</td>
                    <td class="py-1">admin@gmail.com</td>
                    <td class="py-1">Dec 12, 2023 7:00</td>
                    <td class="py-1">Dec 12, 2023</td>
                    <td class="py-1">Yes</td>
                    <td class="py-1">1</td>
                    <td class="py-1">-</td>
                </tr>
            </table>
        </div>
    </div>
</div>