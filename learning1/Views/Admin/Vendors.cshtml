@{
    Layout = "_AdminLayout";
}

@model learning1.DBEntities.ViewModel.VendorViewModel;


@* Content of the Web-page *@
<div class="container-fluid p-4">
    <div class="d-flex justify-content-between my-4">
        <h4 class="">Vendor(s)</h4>
    </div>


    <div class="container-fluid p-0 bg-white border-0 shadow-sm">
        <div class="row d-flex justify-content-between mb-2 p-2">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-sm-6 p-2">
                        <div class="input-group border rounded-0 form-control">
                            <div class="input-group-append">
                                <button class="btn text-secondary border border-0 bg-white" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control border-0  shadow-none" placeholder="Search Vendors" id="SearchVendorName">
                        </div>

                    </div>
                    <div class="col-sm-6 p-2">
                        <div class="input-group border rounded-0 form-control">
                            <div class="input-group-append">
                                <button class="btn text-secondary border border-0 bg-white" type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>

                            <select class="form-select border-0 shadow-none" aria-label="Floating label select example" id="SelectedProfession">
                                <option>All</option>
                                @foreach (var items in Model.ProfessionalTypes)
                                {
                                    <option value=@items.HealthProfessionalId>@items.ProfessionName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>



            <div class="col-md-6 d-flex justify-content-end align-items-center">
                <a class="btn btn-outline-info text-info bg-white d-flex align-items-center p-2" asp-action="AddBusiness" asp-controller="Admin">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25px" height="25" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                    </svg>
                    <p class="d-none d-sm-flex mb-0 py-auto">Add Business</p>
                </a>
            </div>
        </div>





        <div id="Vendors_table">
            @* Render Table here *@
        </div>


    </div>
</div>



<script src="/js/Vendor.js"></script>