@{
    Layout = null;
}


@model learning1.DBEntities.ViewModel.UserAccessViewModel;


<table class="table-responsive  table-hover w-100 px-2">
    <tr class="bg-secondary-subtle">
        <td scope="col" class="py-3 ps-4">Account Type</td>
        <td scope="col" class="py-3">Account POC</td>
        <td scope="col" class="py-3">Phone</td>
        <td scope="col" class="py-3">Status</td>
        <td scope="col" class="py-3">Open Requests</td>
        <td scope="col" class="py-3 d-flex justify-content-center">Actions</td>
    </tr>


    @foreach (var i in Model.UserAccessList)
    {
        <tr class="border-bottom border-secondary-subtle">
            <td class="ps-4 py-1">
                @{
                    if (i.RoleId == 1)
                    {
                        <span>Admin</span>
                    }
                    else
                    {
                        <span>Physician</span>
                    }
                }

            </td>
            <td class="py-1">@i.Name</td>
            <td class="py-1">@i.PhoneNumber</td>
            <td class="py-1"> @i.Status </td>
            <td class="py-1"> @i.OpenRequest</td>
            <td class="d-flex justify-content-center py-1">
                @if (i.RoleId == 2)
                {

                    <a class="btn btn-outline-info" asp-action="UserAccessEdit" asp-controller="Admin" asp-route-NetUserId="@i.AspId">Edit</a>
                }

            </td>
        </tr>
    }

</table>