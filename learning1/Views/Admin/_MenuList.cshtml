@{

}

@model learning1.DBEntities.ViewModel.CreateRoleViewModel;


@foreach(var  menu in Model.menulist){
    
<div class="form-check">
    <input class="form-check-input" type="checkbox" name="SelectedMenus" value=@menu.MenuId id="flexCheckChecked" 
        @if(Model.SelectedMenus != null)
        {
            @(Model.SelectedMenus.Contains(menu.MenuId) ? "checked" : " ")
        }

    >
    <label class="form-check-label text-secondary" for="flexCheckChecked">
        @menu.Name
    </label>
</div>
}
