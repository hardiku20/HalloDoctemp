                    <div class="form-floating input-info mb-3">
                        <input type="date" class="form-control" id="floatingInput" placeholder="ShiftDate">
                        <label for="floatingInput">ShiftDate</label>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="time" class="form-control" id="floatingInput" placeholder="Start">
                                <label for="floatingInput">Start</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="time" class="form-control" id="floatingInput" placeholder="End">
                                <label for="floatingInput">End</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-info bg-info text-white">Return</button>
                    <button type="submit" class="btn btn-info bg-info text-white">Edit</button>
                    <button type="button" class="btn btn-danger bg-danger text-white">Delete</button>
                </div>

            </form>
        </div>
    </div>
</div>











