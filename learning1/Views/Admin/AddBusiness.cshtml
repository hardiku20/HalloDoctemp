@{
    Layout = "_AdminLayout";
}

@model learning1.DBEntities.ViewModel.AddBusinessViewModal;

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />



<div class="container pb-4">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h4 class="ms-4">Add Business</h4>
        <div class="d-flex justify-content-end m-4">
            <a asp-action="admindashboard" asp-controller="admin" class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body ">
            <form method="post" asp-action="AddBusiness" asp-controller="Admin">
                <div class="row p-2">

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Name" asp-for="BusinessName">
                            <label for="floatingInput">Business Name</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.BusinessName)</p>
                        </div>
                    </div>


                    <div class="col-md-6 mb-3">
                        <div class="form-floating select-info">
                            <select class="form-select form-control shadow-none" aria-label="Floating label select example" asp-for="Profession">
                                <option value="0" selected>Select Profession</option>
                                @foreach(var items in Model.ProfessionalTypes)
                                {
                                    <option value=@items.HealthProfessionalId>@items.ProfessionName</option>
                                }
                            </select>
                            <label for="floatingSelect">Profession</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.Profession)</p>
                        </div>
                    </div>


                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Fax Number" asp-for="FaxNumber">
                            <label for="floatingInput">Fax Number</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.FaxNumber)</p>
                        </div>
                    </div> 

                    <div class="col-md-6 mb-3 input-info">
                        <div class="form-floating input-info w-100">
                            <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                   id="phone" asp-for="PhoneNumber">
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.PhoneNumber)</p>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="email" class="form-control" id="floatingInput" placeholder="Email" asp-for="Email">
                            <label for="floatingInput">Email</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.Email)</p>
                        </div>
                    </div>


                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Contact" asp-for="BusinessContact">
                            <label for="floatingInput">Business Contact</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.BusinessContact)</p>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Street" asp-for="Street"> 
                            <label for="floatingInput">Street</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.Street)</p>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="City" asp-for="City">
                            <label for="floatingInput">City</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.City)</p>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="State" asp-for="State">
                            <label for="floatingInput">State</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.State)</p>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Zip/postal" asp-for="Zipcode">
                            <label for="floatingInput">Zip/postal</label>
                            <p class="text-danger">@Html.ValidationMessageFor(x => x.Zipcode)</p>
                        </div>
                    </div>



                </div>


                <div>
                    <div class="d-flex savebutton justify-content-end gap-2 me-2 mb-5">
                        <button class="btn btn-info text-white" type="submit">Submit</button>
                        <button class="btn border-info text-info">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>







<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script>
    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}