                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="d-flex gap-2 align-items-center flex-wrap">
                            @for (int i = 0; i < Model.Region.Count; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input Change1"
                                           type="checkbox"
                                           value="@Model.Region[i].RegionId"
                                           id="checkbox@(i)"
                                           name="checkbox_group"
                                           onchange="AddSelectedRegion()">
                                    <label class="form-check-label text-secondary" for="checkbox@(i)">@Model.Region[i].Name</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-info text-white" asp-action="Payrate" asp-controller="Admin">Enter Payrate</a>
                    <button type="submit" class="btn btn-info text-white px-4">Edit</button>
                 
                </div>
            </form>


            <form>
