                            <input type="text" class="form-control" id="floatingInput" placeholder="Neuro">
                            <label for="floatingInput" class="text-secondary">Neuro</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Others">
                            <label for="floatingInput" class="text-secondary">Others</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Diagonsis">
                            <label for="floatingInput" class="text-secondary">Diagonsis</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Treatment Plan">
                            <label for="floatingInput" class="text-secondary">Treatment Plan</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Medication dispensed">
                            <label for="floatingInput" class="text-secondary">Medication dispensed</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Procedures">
                            <label for="floatingInput" class="text-secondary">Procedures</label>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Followup">
                            <label for="floatingInput" class="text-secondary">Followup</label>
                        </div>
                    </div>
                </div>


                <div class="d-flex mb-2 gap-2">
                    <div class="ms-auto">
                        <button type="submit" class="btn btn-info text-white">Save Changes</button>
                    </div>
                    <div class="">
                        <button type="submit" class="btn text-white" style="background-color: rgb(153,50,204)">Finalize</button>
                    </div>
                    <div class="">
                        <button type="button" class="btn btn-outline-info">Cancel</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
