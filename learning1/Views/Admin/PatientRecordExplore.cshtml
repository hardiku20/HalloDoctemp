@{
    Layout = "_AdminLayout";
}


@model learning1.DBEntities.ViewModel.RecordsViewModel;

@* Content of the Web-page *@
<div class="container-fluid p-4">
    <div class="d-flex justify-content-between my-4">
        <h4 class="">Patient Record</h4>
        <div class="d-flex justify-content-end">
            <a href="javascript: history.go(-1)"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>




    <div class="d-md-block d-none overflow-x-auto">
        <table class="table">
            <tr class="border-bottom border-secondary-subtle bg-secondary-subtle">
                <td scope="col" class="py-3 ps-4">Client/Member</td>
                <td scope="col" class="py-3">Created Date</td>
                <td scope="col" class="py-3">Confirmation</td>
                <td scope="col" class="py-3">Provider Name</td>
                <td scope="col" class="py-3">Concluded Date</td>
                <td scope="col" class="py-3">Status</td>
                <td scope="col" class="py-3">Final Report</td>
                <td scope="col" class="py-3">Actions</td>
            </tr>

            @foreach (var items in Model.patientRecords)
            {
                <tr class="border-bottom border-secondary-subtle">
                    <td class="ps-4 py-1">@items.Client</td>
                    <td class="py-1">@items.CreatedDate</td>
                    <td class="py-1">@items.ConfirmationNumber</td>
                    <td class="py-1">@items.ProviderName</td>
                    <td class="py-1">12 jan, 2044</td>
                    <td class="py-1">@items.Status</td>
                    <td class="py-1">
                        <button class="btn btn-outline-info text-info bg-white dark-mode1 btn-sm">View</button>
                    </td>
                    <td class="py-1">
                        <div class="btn-group">
                            <button class="btn btn-outline-info text-info bg-white dark-mode1 btn-sm rounded" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item">View Case</a>
                                    <a class="dropdown-item">Chat</a>
                                    <a class="dropdown-item">Documents</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </table>

    </div>


</div>

<script src="~/js/Records.js"></script>
