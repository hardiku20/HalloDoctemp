@{
    Layout = "_AdminLayout";
}




<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

<div class="container pb-4">
    <div class="d-flex justify-content-between my-4">
        <h4 class="">Create Provider Account</h4>
        <div class="d-flex justify-content-end">
            <a asp-controller="Admin" asp-action="admindashboard"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>


    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form action="" class="form-floating">
                <div class="row">
                    <h5 class="my-3">Account Information</h5>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="User Name" value="admin" disabled>
                            <label for="floatingInput" >User Name (LastnameF)</label>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Password">
                            <label for="floatingInput" >Password</label>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Role">
                            <label for="floatingInput" >Role</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5 class="my-3">Administration Information</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="First Name">
                            <label for="floatingInput" >First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Last Name">
                            <label for="floatingInput" >Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="email" class="form-control" id="floatingInput" placeholder="Email">
                            <label for="floatingInput" >Email</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3 input-info">
                        <div class="form-floating input-info w-100">
                            <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                   id="phone1">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Medical License">
                            <label for="floatingInput" >Medical License #</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="NPI Number">
                            <label for="floatingInput" >NPI Number</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex gap-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                <label class="form-check-label text-secondary" for="flexCheckChecked">
                                    Checked checkbox
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                <label class="form-check-label text-secondary" for="flexCheckChecked">
                                    Checked checkbox
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                <label class="form-check-label text-secondary" for="flexCheckChecked">
                                    Checked checkbox
                                </label>
                            </div>
                        </div>
                        <div class="form-floating d-flex">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                                <label class="form-check-label text-secondary" for="flexCheckChecked">
                                    Checked checkbox
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5 class="my-3">Mailing & Billing Information</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Address">
                            <label for="floatingInput" >Address 1</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Address">
                            <label for="floatingInput" >Address 2</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="City">
                            <label for="floatingInput" >City</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="State">
                            <label for="floatingInput" >State</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Zip">
                            <label for="floatingInput" >Zip</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3 input-info">
                        <div class="form-floating input-info w-100">
                            <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                   id="phone2">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <h5 class="my-3">Provider Profile</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Name">
                            <label for="floatingInput" >Business Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Website">
                            <label for="floatingInput" >Business Website</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="City">
                            <label for="floatingInput" >City</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating input-info mb-3">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                      style="height: 150px"></textarea>
                            <label for="floatingTextarea2" >
                                Admin Notes
                            </label>
                        </div>
                    </div>
                </div>


                <hr/>

                <div class="row">
                    <h5 class="mt-3 mb-5">Onboarding</h5>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Independent Contractor Agreement
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Background Check
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            HIPAA Compliance
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Non-disclosure Agreement
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                </div>




                <hr/>


                <div class="d-flex justify-content-end mt-5">
                    <button type="submit" class="btn btn-success text-white px-4">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script>
    const phoneInputField1 = document.querySelector("#phone1");
    const phoneInput1 = window.intlTelInput(phoneInputField1, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    const phoneInputField2 = document.querySelector("#phone2");
    const phoneInput2 = window.intlTelInput(phoneInputField2, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>