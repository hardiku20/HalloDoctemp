@{
    Layout = "_AdminLayout";
}

@model learning1.DBEntities.ViewModel.CreateProviderAccountViewModel;


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

<div class="container pb-4">
    <div class="d-flex justify-content-between my-4">
        <h4 class="">Create Provider Account</h4>
        <div class="d-flex justify-content-end">
            <a href="javascript: history.go(-1)"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                <img src="/assets/images/chevron-left.svg" alt=""> Back
            </a>
        </div>
    </div>


    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form class="form-floating" asp-action="CreateProviderAccount" asp-controller="Admin" method="post">
                <div class="row">
                    <h5 class="my-3">Account Information</h5>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control bg-secondary-subtle" id="Username" placeholder="User Name" asp-for="UserName" readonly>
                            <label for="floatingInput" >User Name (LastnameF)</label>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Password" asp-for="Password">
                            <label for="floatingInput" >Password</label>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Role" asp-for="Role">
                            <label for="floatingInput" >Role</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5 class="my-3">Administration Information</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="FirstName" placeholder="First Name" asp-for="FirstName">
                            <label for="floatingInput" >First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="LastName" placeholder="Last Name" asp-for="LastName">
                            <label for="floatingInput" >Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="email" class="form-control" id="floatingInput" placeholder="Email" asp-for="Email">
                            <label for="floatingInput" >Email</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3 input-info">
                        <div class="form-floating input-info w-100">
                            <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                   id="phone1" asp-for="Phone">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Medical License">
                            <label for="floatingInput" >Medical License #</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="NPI Number" asp-for="NPINumber">
                            <label for="floatingInput" >NPI Number</label>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 form-check-group">
                        <div class="d-flex gap-2 align-items-center flex-wrap">
                            @foreach (var region in Model.Region)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input text-info" type="checkbox" name="PhysicianRegions" id="inlineCheckbox1" value="@region.RegionId">
                                    <label class="form-check-label text-secondary" for="inlineCheckbox1">@region.Name</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5 class="my-3">Mailing & Billing Information</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Address" asp-for="Address1">
                            <label for="floatingInput" >Address 1</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Address" asp-for="Address2">
                            <label for="floatingInput" >Address 2</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="City" asp-for="City">
                            <label for="floatingInput" >City</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="State" asp-for="State">
                            <label for="floatingInput" >State</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Zip" asp-for="Zip">
                            <label for="floatingInput" >Zip</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3 input-info">
                        <div class="form-floating input-info w-100">
                            <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                   id="phone2" asp-for="MailingPhone">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <h5 class="my-3">Provider Profile</h5>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Name" asp-for="BussinessName">
                            <label for="floatingInput" >Business Name</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Business Website" asp-for="BussinessWebsite">
                            <label for="floatingInput" >Business Website</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating input-info">
                            <input type="file" class="form-control" id="floatingInput" placeholder="City">
                            <label for="floatingInput" >City</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating input-info mb-3">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                      style="height: 150px" asp-for="AdminNotes"></textarea>
                            <label for="floatingTextarea2" >
                                Admin Notes
                            </label>
                        </div>
                    </div>
                </div>


                <hr/>

                <div class="row">
                    <h5 class="mt-3 mb-5">Onboarding</h5>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Independent Contractor Agreement
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Background Check
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            HIPAA Compliance
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label w-75 ms-5" for="flexCheckDefault">
                            Non-disclosure Agreement
                        </label>
                        <button type="submit" class="btn btn-info text-white px-4 me-4">Upload</button>
                    </div>
                </div>




                <hr/>


                <div class="d-flex justify-content-end mt-5">
                    <button type="submit" class="btn btn-success text-white px-4">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script>
    const phoneInputField1 = document.querySelector("#phone1");
    const phoneInput1 = window.intlTelInput(phoneInputField1, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    const phoneInputField2 = document.querySelector("#phone2");
    const phoneInput2 = window.intlTelInput(phoneInputField2, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });






    $('#FirstName').on('change', function () {
        if ($("#FirstName").val() == "" || $("#LastName").val() == "") {
            $('#Username').val("");
        }
        else {
            $('#Username').val($("#LastName").val() + "_" + $("#FirstName").val());
        }
    });


    $("#LastName").on("change", function () {

        if ($("#FirstName").val() == "" || $("#LastName").val() == "") {
            $('#Username').val("");
        }
        else {
            $('#Username').val($("#LastName").val() + "_" + $("#FirstName").val());
        }
    });
</script>