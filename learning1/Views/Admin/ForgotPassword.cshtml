@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">

</head>

<body class="bg-light">
    <div class="container-fluid d-flex">
        <div class="col-md-6 d-md-block d-none pe-3 bg-white dark-mode1">
            <img src="/assets/images/Platformlogin.jpg" class="img-fluid border-0 " style="height: 100vh;">
        </div>
        <div class="col-md-6 col-12 bg-light mt-5">
            <button type="submit" class="ms-auto mt-4 me-4 d-block rounded border-info bg-white dark-mode1 ">
                <img src="/assets/images/moon.svg" style="transform: rotate(90deg);" alt="" class="p-1 ">
            </button>
            <img src="/assets/images/logo.png" alt="" class="img-fluid mt-2 d-block mx-auto ">
            <h1 class="d-flex justify-content-center mb-4 mt-5 ">Reset Your Password</h1>
            <form action=" " class="">
                <div class="form-floating mb-4 w-75 mx-auto">
                    <input type="text" class="form-control uname" id="floatingInput" placeholder="Name"></input>
                    @* <img src="/assets/images/person-circle.svg" alt="" class="uicon"> *@
                    <label for="floatingInput">Username</label>
                </div>
                <div class="mb-4 d-flex justify-content-center">
                    <button class="btn btn-info text-white py-2 w-75" type="button">Reset Password</button>
                </div>
            </form>
            <a href="platformlogin.html" class="d-flex justify-content-center text-decoration-none mb-5 text-info">
                @* <img src="/assets/images/arrow-left.svg" alt=""> *@ Back to Login
            </a>


            <div class="d-flex justify-content-center text-decoration-none mt-5 ">
                <a href="" class="border-end pe-2 text-decoration-none text-secondary">Terms and Conditions</a>
                <a href="" class="text-decoration-none ms-2 text-secondary">Privacy Policy</a>
            </div>

        </div>
    </div>
</body>
</html>