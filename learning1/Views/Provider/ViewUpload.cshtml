@{
    Layout = "_ProviderLayout";
}

@model learning1.DBEntities.ViewModel.ViewUploadViewModel;


<div class="container-fluid">
    <div class="container">

        <div class="d-flex justify-content-between my-4">
            <h4 class="d-block">Documents</h4>
            <div class="d-flex justify-content-end">
                <a href="javascript: history.go(-1)"
                   class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                    <img src="/assets/images/chevron-left.svg" alt=""> Back
                </a>
            </div>
        </div>
        <div class="bg-white dark-mode1 border-0 shadow-sm p-3">
            <p class="mb-0 pt-4">Patient Name</p>
            <h4 class=" text-info">
                @Model.UserName
            </h4>
            <p class="text-secondary fs-5">
                Check here to review and add files that you or the Client/Member has attached to the Request.
            </p>
            <form method="post" enctype="multipart/form-data">
                <div class="input-group mb-3 py-2">
                    <input type="file" name="formFile" class="form-control fs-5 " placeholder="Select file" aria-label="Select File"
                           aria-describedby="basic-addon2" asp-for="formFile">
                    <label for="inputGroupFile02" class=" btn btn-info text-white  rounded input-group-text">
                        <button type="submit" class=" btn btn-info text-white  rounded input-group-text" asp-action="ViewUpload" asp-controller="Provider" asp-route-requestId="@Model.RequestId">
                            <img src="/assets/images/cloud-upload.svg" alt="cloud" class="text-white rounded-end">
                            Upload
                        </button>
                    </label>
                    <input type="file" class="form-control" id="inputGroupFile02" style="display: none;">
                </div>
            </form>
            <div class="d-flex justify-content-between">
                <h5 class="fs-5 fs-sm-0">Documents</h5>
                <div class="d-flex justify-content-between align-items-center gap-2">
                    <button id="downloadAllButton" class="btn btn-outline-info d-none d-sm-flex p-2">Download All</button>
                    <button id="downloadAllButton" class="btn btn-outline-info d-sm-none d-flex  p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708z" />
                            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                        </svg>
                    </button>
                    <button class="btn btn-outline-info d-none d-sm-flex  p-2">Delete All</button>
                    <button class="btn btn-outline-info d-sm-none d-flex p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>
                    </button>
                    <button class="btn btn-outline-info d-none d-sm-flex p-2">Send Mail</button>
                    <button class="btn btn-outline-info d-sm-none d-flex p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-paper" viewBox="0 0 16 16">
                            <path d="M4 0a2 2 0 0 0-2 2v1.133l-.941.502A2 2 0 0 0 0 5.4V14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.4a2 2 0 0 0-1.059-1.765L14 3.133V2a2 2 0 0 0-2-2zm10 4.267.47.25A1 1 0 0 1 15 5.4v.817l-1 .6zm-1 3.15-3.75 2.25L8 8.917l-1.25.75L3 7.417V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1zm-11-.6-1-.6V5.4a1 1 0 0 1 .53-.882L2 4.267zm13 .566v5.734l-4.778-2.867zm-.035 6.88A1 1 0 0 1 14 15H2a1 1 0 0 1-.965-.738L8 10.083zM1 13.116V7.383l4.778 2.867L1 13.117Z" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>


        <table class="table-responsive  table-hover w-100">
            <tr class="border-bottom border-secondary-subtle bg-secondary-subtle">
                <td colspan="2" class="py-3 ps-3"><input type="checkbox" id="selectAllCheckbox"></td>
                <td scope="col" class="py-3">Documents</td>
                <td scope="col" class="py-3">Upload Date <i class="bi bi-arrow-up"></i></td>
                <td scope="col" class="py-3 d-flex justify-content-center">Actions</td>
            </tr>


            @foreach (var item in Model.DocumentsViewModel)
            {
                <tr class="border-bottom border-secondary-subtle">
                    <td colspan="2" class="ps-3 py-1">
                        <input type="checkbox" class="rowCheckbox">
                    </td>

                    <td class="py-1">
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>

                    <td class="py-1">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>

                    <td class="py-1">
                        <a class="btn btn-outline-info text-info bg-white dark-mode1 download-link" asp-action="download_file" asp-controller="Provider" asp-route-filename="@item.FileName">Download</a>
                        <a class="btn btn-outline-info text-info bg-white dark-mode1">Delete</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var selectAllCheckbox = document.getElementById('selectAllCheckbox');
        var rowCheckboxes = document.querySelectorAll('.rowCheckbox');
        var downloadAllButton = document.getElementById('downloadAllButton');

        selectAllCheckbox.addEventListener('change', function () {
            rowCheckboxes.forEach(function (checkbox) {
                checkbox.checked = this.checked;
            }.bind(this));
        });

        rowCheckboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                if (!this.checked) {
                    selectAllCheckbox.checked = false;
                } else {
                    var allChecked = true;
                    rowCheckboxes.forEach(function (rowCheckbox) {
                        if (!rowCheckbox.checked) {
                            allChecked = false;
                        }
                    });
                    selectAllCheckbox.checked = allChecked;
                }
            });
        });

        downloadAllButton.addEventListener('click', function () {
            var checkedRowCheckboxes = document.querySelectorAll('.rowCheckbox:checked');
            var downloadLinks = [];
            checkedRowCheckboxes.forEach(function (checkbox) {
                var row = checkbox.closest('tr');
                var downloadLink = row.querySelector('.download-link');
                if (downloadLink) {
                    downloadLinks.push(downloadLink.href);
                }
            });
            // Start downloading each file
            downloadLinks.forEach(function (link) {
                var a = document.createElement('a');
                a.href = link;
                a.download = '';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
            });
        });
    });
</script>
