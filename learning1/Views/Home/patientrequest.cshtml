@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/js/customValidation.js"></script>

</head>

<body class="bg-light">
 

        <div class="container pb-4">
            <div class="d-flex justify-content-end m-3">
            <a href="javascript: history.go(-1)"
               class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                    <img src="/assets/images/chevron-left.svg" alt=""> Back
                </a>
            </div>
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form action="" method="post" class="form-floating" enctype="multipart/form-data">
                        <div class="row">
                            <h5 class="my-2">Patient Information</h5>
                            <div class="col-12">
                                <div class="form-floating input-info mb-3">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                              style="height: 100px" asp-for="RequestNotes"></textarea>
                                    <label for="floatingTextarea2" >
                                        Enter brief details of Symptoms
                                        (Optional)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name" asp-for="FirstName">
                                    <label for="floatingInput" >First Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.FirstName)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Last Name" asp-for="LastName">
                                    <label for="floatingInput" >Last Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.LastName)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating input-info">
                                    <input type="date" class="form-control" id="floatingInputValue" aria-label="Date"
                                           aria-describedby="basic-addon1" asp-for="DateofBirth">
                                    <label for="floatingInputValue" >Date of birth</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.DateofBirth)</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class="my-2">Patient Contact Information</h5>
                            <div class="col-md-6">
                                <div class="form-floating input-info">
                                    <input type="email" class="form-control" id="email"
                                           placeholder="name@example.com" asp-for="Email">
                                    <label for="floatingInput" >Email address</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Email)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating input-info w-100">
                                    <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                           id="phone" asp-for="PhoneNumber">
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.PhoneNumber)</p>
                                </div>
                            </div>

                            @if (TempData["viewPassword"] == "true")
                            {

                                <div class="col-md-6 mb-3">
                                    <div class="form-floating hidden-pass">
                                        <input type="password" class="form-control " id="passwordFields1" placeholder="Password" asp-for="Password">
                                        <label class="text-muted" for="passwordFields1">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-floating hidden-pass">
                                        <input type="password" class="form-control" id="passwordFields2" placeholder="Confirm Password" asp-for="ConfirmPassword">
                                        <label class="text-muted" for="passwordFields2">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>


                            }
                            else
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating hidden-pass" style="display:none;">
                                        <input type="password" class="form-control " id="passwordFields1" placeholder="Password" asp-for="Password">
                                        <label class="text-muted" for="passwordFields1">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-floating hidden-pass" style="display:none;">
                                        <input type="password" class="form-control" id="passwordFields2" placeholder="Confirm Password" asp-for="ConfirmPassword">
                                        <label class="text-muted" for="passwordFields2">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            }

                        </div>
                        
                            

                        <div class="row">
                            <h5 class="my-2">Patient Location</h5>
                            <div class="col-sm-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Street" asp-for="Street">
                                    <label for="floatingInput" >Street</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Street)</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="City" asp-for="City">
                                    <label for="floatingInput" >City</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.City)</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="State" asp-for="State">
                                    <label for="floatingInput" >State</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.State)</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Zip Code" asp-for="ZipCode">
                                    <label for="floatingInput" >Zip Code</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.ZipCode)</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Room #/Suite (Optional)">
                                    <label for="floatingInput" >Room #/Suite (Optional)</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-2">
                            <div class="input-group py-2">
                                <input type="file" name="formFile" class="form-control fs-5 py-2" placeholder="Select file" aria-label="Select File" aria-describedby="basic-addon2" asp-for="formFile">
                                <label for="inputGroupFile02" class=" btn btn-info text-white py-2 rounded input-group-text">
                                    <img src="/assets/images/cloud-upload.svg" alt="cloud" class="text-white py-2 rounded">
                                    Upload
                                </label>
                            </div>
                        </div>


                        <div class="d-flex mt-3 mb-2">
                            <div class="ms-auto">
                                <button type="submit" class="btn btn-info text-white">Submit</button>
                            </div>
                            <div class="ms-3">
                                <button type="button" class="btn btn-outline-info">Cancel</button>
                            </div>

                        </div>



                    </form>
                </div>
            </div>
        </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    @*  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script>
        const phoneInputField = document.querySelector("#phone");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
</body>
</html>