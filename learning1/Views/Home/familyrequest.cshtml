@model learning1.DBEntities.ViewModel.Family_FriendRequestViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>family and friends</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
</head>

<body class="bg-light">
    <div class="modal" id="yourModalId" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header d-flex flex-column border-0 mt-4">
                    <div class="">
                        <img src="/assets/images/exclamation-circle-fill.svg"
                             class="border img-fluid border-warning p-1 rounded-circle mx-auto" style="height:80px" alt="...">
                    </div>
                    <h5 class="modal-title">Information</h5>
                </div>
                <div class="modal-body ">
                    <p class="">
                        When submitting a request,you must provide the correct
                        contact information for the patient or the responsibly party. Failure to provide the correct
                        email and phone number will delay service or can be declined
                    </p>
                </div>
                <div class="modal-footer border-0 mx-auto mb-4">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>


    <section class="">

        <div class="container pb-4">
            <div class="d-flex justify-content-end m-4">
                <a href="javascript: history.go(-1)"
                   class="btn btn-outline-info font-info text-decoration-none text-info fs-6 bg-white dark-mode1 d-flex align-items-center gap-1">
                    <img src="/assets/images/chevron-left.svg" alt=""> Back
                </a>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="" method="post" class="form-floating">


                        <div class="row">
                            <h5 class="mt-3 mb-2">Family/Friend Information</h5>
                            <div class="mb-3 mt-2 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Your First Name" asp-for="Fname">
                                    <label for="floatingInput">Your First Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Fname)</p>

                                </div>
                            </div>
                            <div class="mb-3 mt-2 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Your Last Name" asp-for="Lname">
                                    <label for="floatingInput">Your Last Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Lname)</p>
                                </div>
                            </div>
                            <div class="mb-3 col-6">
                                <div class="form-floating input-info mb-3 w-100">
                                    <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti"
                                           id="phone1" asp-for="Phone">
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Phone)</p>

                                </div>
                            </div>
                            <div class="mb-3 col-6">
                                <div class="form-floating input-info">
                                    <input type="email" class="form-control" id="floatingInput"
                                           placeholder="name@example.com" asp-for="Emailaddress">
                                    <label for="floatingInput">Email address</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Emailaddress)</p>

                                </div>
                            </div>
                            <div class=" col-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Relation With Patient" asp-for="Relation">
                                    <label for="floatingInput">Relation with Patient</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class="mt-3 mb-2">Patient Information</h5>
                            <div class="form-floating input-info mt-2 mb-3">
                                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                          style="height: 100px" asp-for="RequestNotes"></textarea>
                                <label for="floatingTextarea2" class="mx-2 text-secondary">
                                    Enter brief details of Symptoms
                                    (Optional)
                                </label>
                            </div>
                            <div class="mb-3 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name" asp-for="FirstName">
                                    <label for="floatingInput">First Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.FirstName)</p>

                                </div>
                            </div>
                            <div class="mb-3 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Last Name" asp-for="LastName">
                                    <label for="floatingInput">Last Name</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.LastName)</p>

                                </div>
                            </div>
                            <div class=" col-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="date" class="form-control" id="floatingInputValue" aria-label="Date"
                                           aria-describedby="basic-addon1" asp-for="DateofBirth">
                                    <label for="floatingInputValue" class="text-secondary">Date of birth</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.DateofBirth)</p>

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class="mt-3 mb-2">Patient Contact Information</h5>
                            <div class="col-md mt-2">
                                <div class="form-floating input-info">
                                    <input type="email" class="form-control" id="floatingInput"
                                           placeholder="name@example.com" asp-for="Email">
                                    <label for="floatingInput">Email address</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Email)</p>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating input-info mb-3 mt-2 w-100">
                                    <input type="tel" class="form-control pt-3 pb-3 w-100 d-inline-block iti" id="phone" asp-for="PhoneNumber">
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.PhoneNumber)</p>

                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <h5 class="mt-3 mb-2">Patient Location</h5>
                            <div class="col-sm-6 mt-2 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Street" asp-for="Street">
                                    <label for="floatingInput">Street</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.Street)</p>

                                </div>
                            </div>
                            <div class="col-sm-6 mt-2 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="City" asp-for="City">
                                    <label for="floatingInput">City</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.City)</p>

                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="State" asp-for="State">
                                    <label for="floatingInput">State</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.State)</p>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Zip Code" asp-for="ZipCode">
                                    <label for="floatingInput">Zip Code</label>
                                    <p class="text-danger">@Html.ValidationMessageFor(x=>x.ZipCode)</p>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Room #/Suite (Optional)">
                                    <label for="floatingInput">Room #/Suite (Optional)</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class="mt-3 mb-2">(Optional) Upload Photo or Document</h5>
                            <div class="input-group mt-2 mb-3 ">
                                <input type="file" class="form-control" id="inputGroupFile02">
                                <label class="input-group-text btn btn-info text-white" for="inputGroupFile02">
                                    <img src="/assets/images/cloud-upload.svg" alt="cloud" class="text-white rounded">
                                    Upload
                                </label>
                            </div>
                        </div>


                        <div class="d-flex mt-3 mb-2">
                            <div class="ms-auto">
                                <button type="submit" class="btn btn-info text-white">Submit</button>
                            </div>
                            <div class="ms-3">
                                <button type="button" class="btn btn-outline-info">Cancel</button>
                            </div>

                        </div>



                    </form>
                </div>
            </div>
        </div>
    </section>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#yourModalId').modal('show');
        });
    </script>
    <script>
        const phoneInputField = document.querySelector("#phone");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
    <script>
        const phoneInputField1 = document.querySelector("#phone1");
        const phoneInput1 = window.intlTelInput(phoneInputField1, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
</body>

</html>








