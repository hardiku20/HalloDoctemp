    <section class="">

        <div class="container ">
            <div class="d-flex justify-content-between align-items-center">
                <h4>User Profile</h4>
                <div class="d-flex justify-content-end m-4">
                    <a href="patientsubmitrequest.html"
                       class="btn btn-outline-info font-info text-decoration-none text-info fs-5 bg-white">
                        <img src="/assets/images/chevron-left.svg" alt=""> Back
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <form action="" class="form-floating">

                        <div class="row mt-3">
                            <h5 class="mb-3">General Information</h5>

                            <div class="mb-3 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name"
                                           value="test" disabled>
                                    <label for="floatingInput" class="">First Name</label>
                                </div>
                            </div>
                            <div class="mb-3 col-6">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" value="test"
                                           placeholder="Last Name" disabled>
                                    <label for="floatingInput" class="">Last Name</label>
                                </div>
                            </div>
                            <div class="form-floating col-6 mb-3 input-info">
                                <input type="date" class="form-control" id="floatingInputValue" aria-label="Date"
                                       aria-describedby="basic-addon1" disabled>
                                <label for="floatingInputValue" class="mx-2">Date of birth</label>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class=" mt-3 mb-2">Contact Information</h5>

                            <div class="col-6">
                                <div class="row mt-2 mb-3 justify-content-between">
                                    <div class="form-floating input-info col-4 ">
                                        <select class="form-select" id="floatingSelectDisabled"
                                                aria-label="Floating label disabled select example" disabled>
                                            <option selected>Mobile</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                        <label for="floatingSelectDisabled" class="mx-2">Type</label>
                                    </div>
                                    <div class="form-floating input-info col-8">
                                        <input type="tel" class="form-control pt-3 pb-3 iti" id="phone" disabled>
                                    </div>
                                </div>



                            </div>

                            <div class="col-md mt-2">
                                <div class="form-floating input-info">
                                    <input type="email" class="form-control" id="floatingInput"
                                           placeholder="name@example.com" value="name@example.com" disabled>
                                    <label for="floatingInput">Email address</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <h5 class="mt-3 mb-2">Location Information</h5>
                            <div class="col-sm-6 mb-3 mt-2">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Street"
                                           value="123" disabled>
                                    <label for="floatingInput">Street</label>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3 mt-2">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="City"
                                           value="bethimore" disabled>
                                    <label for="floatingInput">City</label>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="form-floating input-info">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="State"
                                           value="Maryland" disabled>
                                    <label for="floatingInput">State</label>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">

                                <div class="row ">
                                    <div class="form-floating input-info col-8">
                                        <input type="text" class="form-control" id="floatingInput" placeholder="ZipCode"
                                               value="30450" disabled>
                                        <label for="floatingInput" class="mx-2">Zip Code</label>
                                    </div>
                                    <div class="col-2">

                                        <button type="button"
                                                class="btn btn-outline-info  text-decoration-none bg-white text-info   d-flex  align-items-center p-3">
                                            <img src="/assets/images/geo-alt-fill.svg" class="me-2" alt="...">Map
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="d-flex mt-3 mb-2 justify-content-end">
                            <button type="button"
                                    class="btn btn-info text-white text-decoration-none px-4 py-2">
                                Edit
                            </button>
                        </div>



                    </form>
                </div>
            </div>
        </div>
    </section>





