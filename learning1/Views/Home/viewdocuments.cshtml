@model ViewDocumentViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient DashBoard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>

<body class=" bg-light">

    <h1>@Model</h1>
    <header class="shadow bg-white">
        <nav class="Navbar d-flex justify-content-between align-items-center ">
            <div class="ms-3">
                <a href=""><img src="/assets/images/logo.png" alt="" class="img-thumbnail border-0 w-50 h-50"></a>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3">Welcome <strong>@Model.UserName</strong></span>
                <div class="me-3">
                    <a href="patientsite.html"
                       class="btn btn-outline-info font-info text-decoration-none text-info fs-5 p-1 bg-white">Logout</a>
                </div>
                <div class="me-3">
                    <button type="submit" class="rounded border-info bg-white border ">
                        <img src="/assets/images/moon.svg" style="transform: rotate(90deg);" alt="" class="p-1">
                    </button>
                </div>
            </div>


        </nav>
        <hr>
        <div class="d-flex align-items-center">
            <div class="mx-5 pb-2">
                <a href="" class="text-decoration-none text-info">Dashboard</a>
            </div>
            <div class="pb-2">
                <a href=" " class="text-decoration-none text-info ">Profile</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="container">

            <div class="d-flex justify-content-between">
                <h4 class="m-4 d-block">Documents</h4>


                @* <div class=" d-flex justify-content-end ">
                    <a href="patientsite.html"
                       class="btn btn-outline-info font-info text-decoration-none text-info mx-4 fs-5 p-1 bg-white">
                        Back
                    </a>
                </div> *@

                <div class="d-flex justify-content-end m-4">
                    <a asp-controller="Home" asp-action="patientdashboard"
                       class="btn btn-outline-info font-info text-decoration-none text-info fs-5 bg-white">
                        <img src="/assets/images/chevron-left.svg" alt=""> Back
                    </a>
                </div>

            </div>
            <div class="bg-white border rounded px-3">
                <p class="mb-0 mt-3">Patient Name</p>
                <h4 class=" text-info">
                    @Model.UserName
                </h4>
                <p>
                    Click here for any files that you or doctors of your subsequent
                    requestors have attached for you to review.
                </p>
                <div class="input-group mb-3 py-2">
                    <input type="file" class="form-control fs-5 " placeholder="Select file" aria-label="Select File"
                           aria-describedby="basic-addon2">
                    <label for="inputGroupFile02" class=" btn btn-info text-white  rounded input-group-text">
                        <img src="/assets/images/cloud-upload.svg" alt="cloud" class="text-white rounded-end">
                        Upload
                    </label>
                    <input type="file" class="form-control" id="inputGroupFile02" style="display: none;">
                </div>
                <div class="d-flex justify-content-between my-3 align-items-center mt-4">
                    <h5 class="  d-block">
                        Documents
                    </h5>
                    <div class=" d-flex justify-content-end ">
                        <a href="patientsite.html"
                           class="btn btn-outline-info font-info text-decoration-none text-info fs-5 p-1 bg-white">
                            Download All
                        </a>
                    </div>
                </div>
            </div>

            <!-- <table class="table">
                <thead class="">
                    <tr class="">
                        <th scope="col-1">
                            <input type="checkbox" name="" id="">
                        </th>
                        <th scope="col-3">Files</th>
                        <th scope="col-3">Uploader</th>
                        <th scope="col-4">Uploaded date</th>
                        <th scope="colspan-2">Actions</th>
                    </tr>
                </thead> -->

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th colspan="2"><input type="checkbox" id="selectAllCheckbox"></th>

                        <th scope="col">Uploader</th>
                        <th scope="col">Upload Date <i class="bi bi-arrow-up"></i></th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DocumentsViewModel)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" id="selectAllCheckbox">
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FileName)
                            </td>
                            <td>
                                @Model.UserName
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>

                            <td>
                                <a class="btn btn-outline-info text-info bg-white" asp-controller="home" asp-action="view_document">Download</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</body>

</html>