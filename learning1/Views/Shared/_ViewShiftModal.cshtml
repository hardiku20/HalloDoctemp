@model HalloDocMVC.Entities.ViewModel.ShiftViewDetailDTO
<div class="modal fade" id="ViewShiftModal" tabindex="-1" aria-labelledby="ViewShiftModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="ViewShiftModalLabel">View Shift</h1>
                <span class="material-symbols-outlined text-white" type="button" data-bs-dismiss="modal" aria-label="Close">
                    close
                </span>
            </div>
            <form id="ViewShiftForm" asp-action="EditViewShift" asp-controller="Admin" method="post">
                <div class="modal-body">
                    <div class="">
                        <input type="hidden" asp-for="ShiftDetailId" />
                        <div class="mb-3">
                            <div class="form-floating">
                                <select class="form-select" aria-label="Default select example" asp-for="PhysicianRegionId" disabled>
                                    <option value="@Model.PhysicianRegionId" selected>@Model.PhysicianRegionName</option>
                                </select>
                                <label asp-for="PhysicianRegionId">Region</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-floating">
                                <select class="form-select" aria-label="Floating label select example" asp-for="PhysicianId" disabled>
                                    <option value="@Model.PhysicianName" selected>@Model.PhysicianName</option>
                                </select>
                                <label asp-for="PhysicianId">Physician</label>
                            </div>
                        </div>
                        <fieldset id="EditViewShiftField" disabled>
                            <div class="mb-3">
                                <div class="form-floating">
                                    <input type="date" class="form-control" asp-for="ShiftDate" placeholder="ShiftDate" onchange="disablePastTimesVS()">
                                    <label asp-for="ShiftDate">Shift Date</label>
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div class="form-floating flex-grow-1 me-2">
                                    <input type="time" class="form-control" asp-for="StartTime" placeholder="StartTime" onchange="disablePastTimesVS()">
                                    <label asp-for="StartTime">Start Time</label>
                                </div>
                                <div class="form-floating flex-grow-1">
                                    <input type="time" class="form-control" asp-for="EndTime" placeholder="EndTime">
                                    <label asp-for="EndTime">End Time</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info text-white" id="ReturnViewShift">Return</button>
                    <button type="button" class="btn btn-info text-white" id="EditViewShift">Edit</button>
                    <button type="submit" class="btn btn-info text-white d-none" id="SaveViewShift">Save</button>
                    <button type="button" class="btn btn-danger text-white" id="DeleteViewShift">Delete</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js"></script>

