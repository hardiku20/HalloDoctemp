@{
    ViewData["Title"] = "Dashboard";
}
@model DataAccess.CustomModels.DashboardViewModel;
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
<partial name="_Header" />







@* Modal for ADD*@
<div class="modal fade" id="AddUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
     style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="AddUser" asp-controller="Assignment">
                <div class="modal-header" style="background-color:rgb(128,0,128);">
                    <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">User Form</h1>
                    <button type="button" class="btn-close btn-close-white  shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row mb-2">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" placeholder="FirstName" asp-for="FirstName" required>
                                <label for="floatingInput">First Name</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" placeholder="LastName" asp-for="LastName" required>
                                <label for="floatingInput">Last Name</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" required>
                                <label for="floatingInput">Email</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="date" class="form-control" id="floatingInput" placeholder="date">
                                <label for="floatingInput">Date Of Birth</label>
                            </div>
                        </div>
                    </div>



                    <div class="row mb-2">
                        <div class="col-6">
                            <label class="form-check-label" for="exampleRadios1">
                                Gender
                            </label><br />
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input " type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
                                <label class="form-check-label" for="exampleRadios1" style="font-size:small">
                                    Male
                                </label>
                            </div>
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                                <label class="form-check-label" for="exampleRadios2" style="font-size:small">
                                    Female
                                </label>
                            </div>
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                                <label class="form-check-label" for="exampleRadios3" style="font-size:small">
                                    Others
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" placeholder="Phone" asp-for="PhoneNumber" required>
                                <label for="floatingInput">Phone Number</label>
                            </div>
                        </div>
                    </div>


                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" placeholder="Country" asp-for="Country" required>
                                <label for="floatingInput">Country</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" placeholder="City" asp-for="City" required>
                                <label for="floatingInput">City</label>
                            </div>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-6">
                            <button type="reset" class="btn bg-white text-black w-100 shadow btn-sm">Cancel</button>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn bg-primary text-white w-100 shadow btn-sm">Save</button>
                        </div>
                    </div>




                </div>


            </form>
        </div>
    </div>
</div>











@* Modal for EDIT*@
<div class="modal fade" id="EditUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
     style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="EditUser" asp-controller="Assignment">

                <input id="userId" asp-for="Id" hidden />
                <div class="modal-header" style="background-color:rgb(128,0,128);">
                    <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">User Form</h1>
                    <button type="button" class="btn-close btn-close-white  shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row mb-2">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" id="fname" placeholder="FirstName" asp-for="FirstName">
                                <label for="floatingInput">First Name</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" id="lname" placeholder="LastName" asp-for="LastName">
                                <label for="floatingInput">Last Name</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Email">
                                <label for="floatingInput">Email</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="date" class="form-control" id="floatingInput" placeholder="date" disabled>
                                <label for="floatingInput">Date Of Birth</label>
                            </div>
                        </div>
                    </div>



                    <div class="row mb-2">
                        <div class="col-6">
                            <label class="form-check-label" for="exampleRadios1">
                                Gender
                            </label><br />
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input " type="radio" name="exampleRadios" id="exampleRadios1" value="option1" disabled>
                                <label class="form-check-label" for="exampleRadios1" style="font-size:small">
                                    Male
                                </label>
                            </div>
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2" disabled>
                                <label class="form-check-label" for="exampleRadios2" style="font-size:small">
                                    Female
                                </label>
                            </div>
                            <div class="form-check form-check-inline m-0">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
                                <label class="form-check-label" for="exampleRadios3" style="font-size:small">
                                    Others
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" id="phone" placeholder="Phone" asp-for="PhoneNumber">
                                <label for="floatingInput">Phone Number</label>
                            </div>
                        </div>
                    </div>


                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" id="country" placeholder="Country" asp-for="Country" disabled>
                                <label for="floatingInput">Country</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating input-info">
                                <input type="text" class="form-control" id="city" placeholder="City" asp-for="City" disabled>
                                <label for="floatingInput">City</label>
                            </div>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-6">
                            <button type="button" class="btn bg-white text-black w-100 shadow btn-sm">Cancel</button>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn bg-primary text-white w-100 shadow btn-sm">Save</button>
                        </div>
                    </div>




                </div>


            </form>
        </div>
    </div>
</div>






<div class="container">

    <div class="col-12 my-3">
        <div class="form-floating input-info">
            <input type="text" class="form-control" id="floatingInput" placeholder="Search">
            <label for="floatingInput">Search</label>
        </div>
    </div>

    
    <div id="Usertable">
        @* partial view here *@
    </div>

</div>




<script>


    $(document).ready(function () {
       

        $.ajax({
            type: "GET",
            url: "/Assignment/RenderPartialView",
            data: {

            },

            success: function (result) {
                console.log(result);
                $("#Usertable").html(result);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }

        })
    })





    function onEdit(userId,fname, lname, email,phone,city, country) {
        document.getElementById("userId").value = userId
        document.getElementById("fname").value = fname
        document.getElementById("lname").value = lname
        document.getElementById("email").value = email
        document.getElementById("phone").value = phone
        document.getElementById("city").value = city
        document.getElementById("country").value = country
    }


    
</script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}